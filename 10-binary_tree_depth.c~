#include "binary_trees.h"

/**
 * main - Entry point
 *
 * Return: Always 0 (Success)
 */
size_t findMax(size_t a, size_t b);
size_t findMax(size_t a, size_t b){
        if(a >= b)
                return a;
        return b;
}
size_t binary_tree_depth(const binary_tree_t *tree)
{
	if (tree == NULL ||( tree->parent == NULL && tree->right == NULL && tree->left == NULL))
		return (0);

	return (findMax(binary_tree_depth(tree->left), binary_tree_depth(tree->right\
				)) + 1);
}
